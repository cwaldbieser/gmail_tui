MainPanel {
    layout: horizontal;
    background: gray;
    height: 100%;
}

MessageList {
    width: 100%;
    height: 100%;
    background: gray;
}

ButtonBar {
    background: cyan;
    width: 100%;
    layout: horizontal;
    align-horizontal: center;
    dock: bottom;
}

.button {
    margin: 1;
}

.item-even {
    background: blue;
    color: white;
}

.item-odd {
    background: cornflowerblue;
    color: white;
}
